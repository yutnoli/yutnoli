package Control;

import Model.GameData;

public class ValidPlace {
	GameData data = GameData.getInstance();
	int [] choseState;
	boolean[] playerMove = new boolean[5];
	
	public void setValidPlaceMap(int state, int num) {
		choseState = data.getChoseState();
		for (int i = 0; i < 5; i++) {//get player's move data
			if (choseState[0] == 0) {
				playerMove[i] = data.findPlayerMove(data.getNsTeamData(choseState[1]), i);
			}
			else if ( choseState[0] == 1) {
				playerMove[i] = data.findPlayerMove(data.getCcsTeamData(choseState[1]), i);
			}
			else {
				playerMove[i] = data.findPlayerMove(data.getSsTeamData(), i);
			}
		}
		//check chose state
		if(playerMove[0]) {
			//player has Do move
			if(choseState[0] == 0) {//chose state is normal state
				if (choseState[1] != 3 && choseState[1] != 7 && choseState[1] != 11 && choseState[1] != 15 && choseState[1] != 17 && choseState[1] != 19 && choseState[1] != 21 && choseState[1] != 23)
					data.set
			}
			else if(choseState[1] == 1) {//chose state is conerCenter State
				if(choseState[1] == 0)
					validPlace[4] = true;
				else if(choseState[1] == 1) 
					validPlace[9] = true;
				else if (choseState[1] == 2)
					validPlace[14] = true;
				else if (choseState[1] == 3) {
					validPlace[21] = true;
				}
			}
			else if(choseState[2] == 2) {//chose state is start state
				validPlace[28] = true;
			}
		}
		else if(playerMove[1]) {
			//player has Gae move
		}
		else if(playerMove[2]) {
			//player has Geol move
		}
		else if(playerMove[3]) {
			//player has Yut move
		}
		else if(playerMove[4]) {
			//player ha Mo move
		}
	}
}
