package Control;

import Model.GameData;

public class DeletMove {

	int convertStateOr2Seq(int state, int num) {
		if(state == 0) {
			if(num >=0 && num<4) {
				return num + 1;
			}
			else if(num>3 && num<8) {
				return num + 2;
			}
			else if (num > 7 && num <12) {
				return num + 3;
			}
			else if (num > 11 && num < 16) {
				return num + 4;
			}
			else if (num > 15 && num < 18) {
				stateChanged[num + 7] = true;
			}
			else if (num > 17 && num < 20) {
				stateChanged[num + 8] = true;
			}
			else if (num > 19 && num < 22) {
				stateChanged[num + 15] = true;
			}
			else if (num > 21 && num < 24) {
				stateChanged[num + 16] = true;
			}
		}
		else if(state == 1) {
			if(num == 0)
				stateChanged[4] = true;
			else if(num == 1) 
				stateChanged[9] = true;
			else if (num == 2)
				stateChanged[14] = true;
			else if (num == 3) {
				stateChanged[21] = true;
			}
		}
		else if(state == 2) {
			stateChanged[28] = true;
		}
	}
	
	public void deletUsedMove(int state, int num) {
		
	}
	
}
