package View;

import java.awt.*;
import javax.swing.*;
import View.MapPrint;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class GameMain{
	int numOfPlayer;
	int numOfStone;
	JButton[] getPlayerButton = new JButton[3];
	
	class GameMainAction implements ActionListener{
		public void actionPerformed(ActionEvent e) {
			if(e.getSource().equals(getPlayerButton[0])) {
					numOfPlayer = 2;
			}
			else if(e.getSource().equals(getPlayerButton[1])) {
				numOfPlayer = 3;
			}
			else if(e.getSource().equals(getPlayerButton[2])) {
				numOfPlayer = 4;
			}
		}
	}
		
	void GameInitFrame() {
		JFrame getPlayer = new JFrame();
		getPlayer.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		JPanel gamePanel = new JPanel();
		gamePanel.setLayout(null);
		GameMainAction action = new GameMainAction();
		
		for(int i = 0; i < 3; i++) {
			getPlayerButton[i] = new JButton((i+2)+"Players");
			getPlayerButton[i].addActionListener(action);
			getPlayerButton[i].setBounds(10 + 10*i, 120, 80, 50);
			gamePanel.add(getPlayerButton[i]);
		}
		
		getPlayer.add(gamePanel);
		
		getPlayer.setSize(300, 150);
		getPlayer.setLocationRelativeTo(null);
		getPlayer.setVisible(true);
	}
	
	public static void main(String[] args) {
		
		
		
		MapPrint mainMap = new MapPrint();
		mainMap.testImage();
	}

}
